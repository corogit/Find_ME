<div class="container">
  <div class="row mt-5">
    <div class="col-lg-10">
      <h2 class="heading">ダイレクトメッセージ</h2>
        <h4>参加者</h4>
          <% @entries.each do |e| %>
            <%= link_to e.user.full_name, user_path(e.user_id) %>
          <% end %>
            <div id="messages" data-room_id="<%= @room.id %>">
            <% @messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>
          <form>
            <label>メッセージを送る:</label><br>
            <input type="text" id="chat-input" data-behavior="room_speaker", class="form-control">
          </form>
        
    </div>
  </div>
</div>