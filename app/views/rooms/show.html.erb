<div class="container">
  <div class="row mt-5">
    <div class="col-lg-10">
      <h1><%= @room.name %></h1>
        <h4>参加者</h4>
          <% @entries.each do |e| %>
            <%= link_to e.user.full_name, user_path(e.user_id) %>
          <% end %>
          <h1>Chat room</h1>
          <form>
            <label>Say something:</label><br>
            <input type="text" id="chat-input" data-behavior="room_speaker">
          </form>
          <div id="messages" data-room_id="<%= @room.id %>">
            <% @messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>
    </div>
  </div>
</div>