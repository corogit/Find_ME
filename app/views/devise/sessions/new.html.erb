<div class="container">
  <div class="row mt-5">
    <div class="col-lg-12">
      <div class="background">
      <h2 class=heading>ログイン</h2>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, placeholder: "(例)yamada_taro@findme.com", autofocus: true, autocomplete: "email", style: "width: 30%;" %>
        </div>
        <div class="field mt-3">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions mt-3">
          <%= f.submit "Log in", class: "btn btn-secondary" %>
        </div>
        <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "btn btn-info mt-5" %>
      <% end %>
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
