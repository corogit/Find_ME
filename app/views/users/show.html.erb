<div class="container">
  <div class="row mt-5">
    <div class="col-lg-3">
      <%= render 'pets/user', user: current_user %>
      <%= render 'contact' %>
    </div>
  
    <div class="col-lg-8 offset-lg-1">
      <h2 class="heading">マイページ</h2>
        <% @pets.each do |pet| %>
          <div class="p-list">
            <%= link_to pet_path(pet.id) do %>
              <%= attachment_image_tag pet, :image, format: "jpg", size: "300x300", fallback: "no_image.jpg", class: "rounded" %>
            <% end %>
            <p class="pet-name">お名前: 
            <%= link_to pet_path(pet.id) do %>
              <%= pet.name %></p>
            <% end %>
            <p>性別: <%= pet.gender %></p>
            <p>お誕生日: <%= pet.birthday %></p>
          </div>
          <div class="favorite-btn<%= pet.id %>">
            <%= render 'favorites/favorite', pet: pet %>
          </div>
          <div class="comments_<%= pet.id %>">
            <%= render 'comments/comment', pet: pet, comment: @comment %>
          </div>
        <% end %>
        
        <h3>ユーザー詳細</h3>
        <h2><%= @user.full_name %></h2>
        <h2><%= @user.email %></h2>

        <% unless @user.id == current_user.id %>
          <% if @isRoom == true %>
            <%= link_to "チャットへGo!", room_path(@roomId) %>
          <% else %>
            <%= form_for @room do |f| %>
              <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, :value=> @user.id %>
              <% end %>
              <%= f.submit "チャットを始める" %>
            <% end %>
          <% end %>
        <% end %>

    </div>
  </div>
</div>